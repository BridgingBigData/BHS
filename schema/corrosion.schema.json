{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://bridgingbigdata.github.io/bridgehealthschema/schema/corrosion.schema.json",
  "title": "Corrosion",
  "description": "Describing the attributes of corrosion on bridges",
  "type": "object",
  "properties": {
    "deficiencyName": {
      "type": "string",
      "description": "Name of the Deficiency",
    },
    "structureNumber": {
        "type": "string",
        "description": "A uri that uniquely identifies a bridge structure",
        "format": "uri"
    },
    "mediaURLs": {
      "type": "array",
      "description": "URLs for media such as images and videos related to the deficiency",
      "items": {
        "type": "string",
        "description": "URL of a media item",
        "format": "uri"
      }
    },
    "corrosionLocation": {
      "type": "object",
      "description": "Location of corrosion on a steel bridge",
      "properties": {
        "span": {
          "type": "string",
          "description": "Bridge Span"
        },
        "spanElement": {
          "type": "object",
          "properties": {
            "elementType": {
              "type": "string",
              "description": "elements",
              "enum": [
                "Girder",
                "Cross Frame",
                "Stringers",
                "Stiffners",
                "Joints",
                "Connections"
              ]
            },
            "elementName": {
              "type": "string",
              "description": "The name of the element"
            },
            "localLocation": {
              "type": "array",
              "description": "Local Location of the corrosion",
              "items": {
                "type": "string",
                "enum": [
                  "Top-Flange",
                  "Web",
                  "Bottom-Flange"
                ]
              }
            },
            "geo": {
                  "type": "object",
                  "properties": {
                      "coordinates": {
                          "type": "array",
                          "items": {
                              "type": "number"
                          }
                      },
                      "type": {
                          "type": "string"
                      }
                  }
            }
          }
        }
      }
    },
    "boundingBox": {
      "type": "object",
      "description": "A bounding box that includes the deficiency",
      "properties": {
        "length": {
          "type": "number",
          "description": "Length of the bounding box"
        },
        "width": {
          "type": "number",
          "description": "Width of the bounding box"
        },
        "depth": {
          "type": "number",
          "description": "depth of the deficiency in the bounding box"
        }
      },
      "required":[
        "length",
        "width"
      ]
    },
    "corrosionColor": {
      "type": "string",
      "description": "Color of the corrosion"
    },
    "corrsionType": {
      "type": "string",
      "description": "The type of corrosion",
      "anyOf": [
        {
          "type": "string",
          "enum": [
            "Pack Rust",
            "Surface Rust",
            "Crevice Corrosion",
            "Pitting Corrosion",
            "Galvanic Corrosion"
          ],
          "description": "The type of corrosion"
        },
        {
          "type": "string",
          "description": "The type of corrosion"
        }
      ]
    },
    "corrosionCondition": {
      "type": "string",
      "description": "Condition of the corrosion",
      "enum": [
        "Heavy",
        "Light"
      ]
    },
    "corrosionOutcome": {
      "type": "array",
      "description": "Possible outcomes of corrosion",
      "items": {
        "type": "string",
        "description": "Possible outcomes",
        "enum": [
          "Section Loss",
          "Debris",
          "Paint Chipping",
          "Paint Peeling",
          "Paint Flaking",
          "Paint Sealing",
          "Paint Blistering"
        ]
      }
    },
    "label": {
      "type": "string",
      "description": "A security, privacy and ethics label"
    }
  },
  "additionalProperties": false,
  "required":[
    "structureNumber",
    "corrosionLocation",
    "corrosionColor",
    "corrosionCondition",
    "label"
  ]
}
