{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://bridgingbigdata.github.io/bridgehealthschema/schema/corrosion.schema.json",
  "title": "Corrosion",
  "description": "Describing the attributes of corrosion on bridges",
  "type": "object",
  "properties": {
    "mediaURLs": {
      "$ref":"deficiencycore.schema.json#/definitions/mediaURLs"
    },
    "corrosionLocation": {
      "type": "object",
      "description": "Location of corrosion on a steel bridge",
      "properties": {
        "span": {
          "type": "string",
          "description": "Bridge Span"
        },
        "spanElement": {
          "type": "object",
          "properties": {
            "elementType": {
              "type": "string",
              "description": "elements",
              "enum": [
                "Girder",
                "Cross Frame",
                "Stringers",
                "Stiffners",
                "Joints",
                "Connections"
              ]
            },
            "elementName": {
              "type": "string",
              "description": "The name of the element"
            },
            "localLocation": {
              "type": "array",
              "description": "Local Location of the corrosion",
              "items": {
                "type": "string",
                "enum": [
                  "Top-Flange",
                  "Web",
                  "Bottom-Flange"
                ]
              }
            },
            "geo": {
              "$ref":"deficiencycore.schema.json#/definitions/geo"
            }
          }
        }
      }
    },
    "boundingBox": {
      "$ref":"deficiencycore.schema.json#/definitions/boundingBox"
    },
    "corrosionColor": {
      "type": "string",
      "description": "Color of the corrosion"
    },
    "corrsionType": {
      "type": "string",
      "description": "The type of corrosion",
      "anyOf": [
        {
          "type": "string",
          "enum": [
            "Pack Rust",
            "Surface Rust",
            "Crevice Corrosion",
            "Pitting Corrosion",
            "Galvanic Corrosion"
          ],
          "description": "The type of corrosion"
        },
        {
          "type": "string",
          "description": "The type of corrosion"
        }
      ]
    },
    "corrosionCondition": {
      "type": "string",
      "description": "Condition of the corrosion",
      "enum": [
        "Heavy",
        "Light"
      ]
    },
    "corrosionOutcome": {
      "type": "array",
      "description": "Possible outcomes of corrosion",
      "items": {
        "type": "string",
        "description": "Possible outcomes",
        "enum": [
          "Section Loss",
          "Debris",
          "Paint Chipping",
          "Paint Peeling",
          "Paint Flaking",
          "Paint Sealing",
          "Paint Blistering"
        ]
      }
    },
    "label":{
      "$ref":"deficiencycore.schema.json#/definitions/label"
    }
  },
  "additionalProperties": false,
  "required":[
    "corrosionLocation",
    "corrosionColor",
    "corrosionCondition",
    "label"
  ]
}
