{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://bridgingbigdata.github.io/bridgehealthschema/schema/crack.schema.json",
  "title": "Crack",
  "description": "Attributes of cracks on bridges",
  "type": "object",
  "properties": {
    "mediaURLs": {
      "$ref":"deficiencycore.schema.json#/definitions/mediaURLs"
    },
    "onStructuralMember": {
      "$ref":"deficiencycore.schema.json#/definitions/onStructuralMember"
    },
    "orientation": {
      "type": "string",
      "description": "Orientation of the crack with respect to traffic flow",
      "enum": [
        "Transverse",
        "Longitudinal"
      ]
    },
    "momentRegionType": {
      "type": "string",
      "description": "Moment region type in which the crack is located",
      "enum": [
        "Positive",
        "Negative"
      ]
    },
    "widthAverage": {
      "type": "number",
      "description": "Width Average of the crack in inches"
    },
    "widthMax": {
      "type": "number",
      "description": "Width Maximum of the crack in inches"
    },
    "pointWidth": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "Width at certain points along the crack in inches"
    },
    "length": {
      "type": "number",
      "description": "Length of the crack in inches"
    },
    "geo": {
      "$ref":"deficiencycore.schema.json#/definitions/geo"
    },
    "closestElement":
    {
      "$ref":"deficiencycore.schema.json#/definitions/closestElement"
    }
  }
}
